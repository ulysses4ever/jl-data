###################################################
## Run simulation
###################################################

function run_dynamic(t::TypeGraph, steps::Int64, parameters::Params)
  println("Running with steps = $steps, batch = $(p.batchSize), techno = $(p.techno),
          priorities= $(p.priorities)")

  pool = InstanceGraph(t)
  tic()
  time_match = []
  time_edges = []
  time_solver = []
  time_jump = []

  for k in 1:steps
    arriving_node = t.nodes[rand(1:t.n)]
    arrival!(pool, arriving_node, k)
    time_tic = time()
    am = am_generator(pool)
    edges = edge_list_generator(pool, parameters)
    push!(time_edges, time() - time_tic)
    if k%p.batchSize == 0
      time_tic = time()
      matched_nodes, solve_time, jump_time = match(edges, am, parameters)
      push!(time_match, time() - time_tic)
      push!(time_solver, solve_time)
      push!(time_jump, jump_time)
      remove_matched!(pool, matched_nodes, k)
    end
    departures!(pool, k)
    if k%(steps/20) == 0
      print_status(pool, k, parameters)
      println("average time for match: $(mean(time_match))")
      println("average time for solver: $(mean(time_solver))")
      println("average time for jump: $(mean(time_jump))")
      println("average time for edges: $(mean(time_edges))")
    end
  end
  toc()

  return pool_summary(pool, steps)
end

function print_status(pool::InstanceGraph, k::Int64, p::Params)
  if p.verbose > 0
    println("It: $k, pool size: $(pool.n_present)")
  end
end

function pool_summary(pool::InstanceGraph, steps::Int64)
  n_types = length(pool.type_graph.nodes)
  summary = DataFrame(n_arr = zeros(Int64, n_types),
                      n_match = zeros(Int64, n_types),
                      n_dep = zeros(Int64, n_types),
                      n_inpool = zeros(Int64, n_types),
                      wait_match = zeros(Float64, n_types),
                      wait_dep = zeros(Float64, n_types),
                      )
  for n in pool.all_nodes
    if n.arr_time >= steps/5
      id = n.node_type.id
      summary[id, :n_arr] += 1
      if n.dep_time == -1
        wait = steps - n.arr_time
      elseif n.dep_time - n.arr_time >= 0
        wait = n.dep_time - n.arr_time
      else
        println("Error, departure before arrival: dep= $(n.dep_time), arr= $(n.arr_time)")
      end
      if n.matched
        summary[id, :n_match] += 1
        summary[id, :wait_match] += wait
      elseif n.departed
        summary[id, :n_dep] += 1
        summary[id, :wait_dep] += wait
      else
        summary[id, :n_inpool] += 1
      end
    end
  end
  return summary
end
