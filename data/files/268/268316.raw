#typeData either "train" or "test"
#labelsInfo contains the IDs for each image to be read
#image files for this tutorial are 20x20, i.e. single vector has size of 400
#path set to location of files
function read_data(typeData, labelsInfo, imageSize, path)
  x = zeros(size(labelsInfo, 1), imageSize)

  for (index, idImage) in enumerate(labelsInfo[:ID])
    nameFile = "$(path)/$(typeData)Resized/$(idImage).bmp"
    println(idImage)
    img = imread(nameFile)

    ##float conversion
    ##suggestion from tutorial seems outdated
    #tmp = float32sc(img)
    ##using a slightly more complicated version, from the github page of Images package.
    ##TODO: find a more elegant way to solve this.
    img = separate(img)
    tmp = convert(Array, img)

    #to grayscale image
    if ndims(tmp) == 3
    ##using (approx.) luminosity 0.21 R + 0.72 G + 0.07 B
      tmp = 0.21 * tmp[:,:,1] + 0.72 * tmp[:,:,2] + 0.07 * tmp[:,:,3]
    end

  x[index, :] = reshape(tmp, 1, imageSize)
  end
  return x
end



