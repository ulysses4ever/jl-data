#typeData either "train" or "test"
#labelsInfo contains the IDs for each image to be read
#image files for this tutorial are 20x20, i.e. single vector has size of 400
#path set to location of files
function read_data(typeData, labelsInfo, imageSize, path)
  x = zeros(size(labelsInfo, 1), imageSize)

  for (index, idImage) in enumerate(labelsInfo[:ID])
    nameFile = "$(path)/$(typeData)Resized/$(idImage).png"
    println(idImage)
    img = io.imread(nameFile)
    ## cannot use Image package due to problems with imagemagick lib under Mac OS X
    #  img = imread(nameFile)

    ##float conversion
    #img = separate(img)
    #tmp = convert(Array, img)

    #to grayscale image
    if ndims(img) == 3
    ##using (approx.) luminosity 0.21 R + 0.72 G + 0.07 B
      img = 0.21 * img[:,:,1] + 0.72 * img[:,:,2] + 0.07 * img[:,:,3]
    end

  x[index, :] = reshape(img, 1, imageSize)
  end
  return x
end



