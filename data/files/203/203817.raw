# Task 5
function moveOnCircle(Object;figNum=1)
	for t=1:180
		# set transformation
		T = translation(cos(2*π*t/180),sin(2*π*t/180),0.0)
		# transform Object
		TObject = T*Object
		# 
		render(TObject;figNum=figNum,figAxis=[-1,2,-1,2])
		sleep(1/(24*4))	
	end
end

