include("../convexhull.jl")
# Example: convex hull of a 10-by-10 grid.
p = convexhull([(int(floor(i/10)), i%10) for i in 0:99]) 
a = [(0, 0), (9, 0), (9, 9), (0, 9), (0, 0)]
@assert p == a
pnts  = [(1, 1), (3, -1), (1, 1), (6, -1),(3, -1), (5, 3), (2, 3) ]
println(convexhull(pnts)) #[(1,1),(3,-1),(6,-1),(5,3),(2,3),(1,1)]
println(convexhull([(1, 1)])) #[(1,1)]
println(convexhull([(1, 1),(3, -1)])) #[(1,1),(3,-1),(1,1)]
println(convexhull(Int64[])) #Int64[]


