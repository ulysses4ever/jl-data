function pe11()
    A = readdlm("grid", ' ', Uint8)
    n, m = size(A)

    maxprod = 0

    for i = 1:n
        for j = 1:m
            # vertical
            if i <= n - 3
                maxprod = max(prod(A[i:i+3, j]), maxprod)
            end
            # horizontal
            if j <= m - 3
                maxprod = max(prod(A[i, j:j+3]), maxprod)
            end
            # diagonal \
            if j <= m - 3 && i <= n - 3
                maxprod = max(prod([A[i + k, j + k] for k = 0:3]), maxprod)
            end
            # diagonal /
            if j <= m - 3 && i >= 4
                maxprod = max(prod([A[i - k, j + k] for k = 0:3]), maxprod)
            end
        end
    end
    print(maxprod)
end
