cgls_tol = 1.0e-6;

for npower = 1 : 4
  (b, A, D, HY, HZ, Acond, rnorm) = test(40, 40, 4, npower, 0);  # No regularization.

  for mat in {sparse(full(A)), full(A), A}
    (x, stats) = cgls(mat, b);
    resid = norm(A' * (A*x - b)) / norm(b)
    @printf("CGLS: Relative residual: %8.1e\n", resid);
    @test(resid <= cgls_tol);
    @test(stats.solved);
  end

  位 = 1.0e-3;
  for mat in {sparse(full(A)), full(A), A}
    (x, stats) = cgls(mat, b, 位=位);
    resid = norm(A' * (A*x - b) + 位 * x) / norm(b)
    @printf("CGLS: Relative residual: %8.1e\n", resid);
    @test(resid <= cgls_tol);
    @test(stats.solved);
  end
end
