type NWMatrixRow
    row::Array{Float64}
end

type NWMatrix
    rows::Array{NWMatrixRow}
    pos_i::Int64
    pos_j::Int64
end

function createMatrix(numRows, numColumns)
    matrix = NWMatrix([NWMatrixRow(zeros(numColumns))], 0, 0)

    # we need to add numRows - 1 more rows
    for n=1:numRows-1
        push(matrix.rows, NWMatrixRow(zeros(numColumns)))
    end

    return matrix
end

mat = createMatrix(7,8)

println(mat)
