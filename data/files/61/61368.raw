module ex
using VoxelBox



s1(x,y,z)=sphereobj(x,y,z,1.5,2.0,2.0,1.3)
s2(x,y,z)=sphereobj(x,y,z,1.5,1.0,2.0,1.3)


V1=VoxelBoxVolume(Int,15*[5,6,7],[4.0, 4.0, 5.0])
f(x,y,z)=max(s1(x,y,z),-s2(x,y,z))
fillvolume!(V1,f,1,0)

V2=VoxelBoxVolume(V1)
f(x,y,z)=s2(x,y,z)
fillvolume!(V2,f,2,0)

mergevolume!(V1,V2,0)

VoxelBox.vtkexport(V1,"theV1.vtk")

end
