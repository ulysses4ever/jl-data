# Minimum skew problem


genome = ""
#genome = "CATCGTAACCCACGCTTAAATAAAGAAACGCTTAAAGTCACGACGCTTAAAACGCT"
outs = zeros(Int8,length(genome))
ginds = findin(genome,"G")
cinds = findin(genome,"C")
if length(ginds)!=0; outs[ginds] = 1; end
if length(cinds)!=0; outs[cinds] = -1; end
gcskew = cumsum(outs)
gcmin = minimum(gcskew)
mininds = find((x)->x==gcmin,gcskew)

@sprintf("Minimum GCSkew: %d",gcmin)
@sprintf("At indices: %s",join(mininds," "))

