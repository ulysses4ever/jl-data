module julianne

import neurons
import synapses
import tools

export evolve

### Time Evolution ###
function evolve(neur::neurons.Neurons, syn::synapses.Synapses, Iext::Array{Float64,1}, dt::Float64)
    I = synapses.input_current(neur, syn)
    I += Iext
    return neurons.update_neurons(neur, I, dt)
end

end
