function event_based_risk_workflow(job_file)
  inputs = event_based_risk_preprocess(job_file)
  outputs = event_based_risk_tree(inputs)
  export_dir, job_name = splitdir(job_file)
  event_based_risk_export(outputs, export_dir, job_name)
end
