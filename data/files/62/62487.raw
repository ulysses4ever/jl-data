#===============================================================================
                        Test the Vect3D class
===============================================================================#

a = vect3d(2,8,6.)
b = vect3d(4)

@test a*2 == vect3d(4.,16.,12.)
@test a*2 == 2*a
@test a/2 == vect3d(1.,4.,3.)

@test a + b == vect3d(6.,12.,10.)
@test a - b == vect3d(-2.,4.,2.)

@test a*b == 64.0
@test a^a == vect3d(0.0)
@test (a^b)*a == 0.0
@test (b^a)*b == 0.0

@test norm(a) == sqrt(104.0)