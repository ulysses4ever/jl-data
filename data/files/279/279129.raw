using   Base.Test
include("../chull.jl")
exports = isdefined(:exports)?
    exports : Dict{ASCIIString,Function}()

exports["test_convexhull"] = function test_chull()
  # Example: convex hull of a 10-by-10 grid.
  p = chull([(int(floor(i/10)), i%10) for i in 0:99]) 
  a = [(0, 0), (9, 0), (9, 9), (0, 9), (0, 0)]
  @test ==(p , a)
  pnts  = [(1, 1), (3, -1), (1, 1), (6, -1),(3, -1), (5, 3), (2, 3) ]
  @test ==(chull(pnts),[(1,1),(3,-1),(6,-1),(5,3),(2,3),(1,1)])
  @test ==(chull([(1, 1),(3,-1),(1, 1),(3,-1),(3,-1)]),  [(1, 1),(3,-1),(1,1)])
  @test ==(chull([(1, 1),(1, 1)]),  [(1, 1)])
  @test ==(chull([(1, 1)]),  [(1, 1)])
  @test ==(chull(Int64[]),  Int64[])
end


