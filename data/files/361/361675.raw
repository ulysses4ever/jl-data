module MyMergeSortTests

using FactCheck
using MyMergeSort

facts("myMergeSort should sort an array correctly") do
  bigRand = vec(rand(1:1000,10000,1))
  @fact myMergeSort([1,2,3,4]) => [1,2,3,4]
  @fact myMergeSort([4,3,2,1]) => [1,2,3,4]
  @fact myMergeSort([]) => []
  @fact myMergeSort([4,3,2,1,2,4]) => [1,2,2,3,4,4]
  @fact sort(bigRand,alg=MergeSort) == myMergeSort(bigRand) => true
end

facts("MyMerge should merge 2 arrays correctly") do
  @fact myMerge([1,3],[2,4]) => [1,2,3,4]
  @fact myMerge([1,4],[2,3]) => [1,2,3,4]
  @fact myMerge([1,3,5],[2,4,6]) => [1,2,3,4,5,6]
  @fact myMerge([1,3,5],[2,4]) => [1,2,3,4,5]
  @fact myMerge([1],[]) => [1]
end

end
