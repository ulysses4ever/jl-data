module kaggle

export featnorm, apply_featnorm

function featnorm(x)

  sigma = std(x,1)
  mu = mean(x,1)
  for col in 1:size(x,2)
    x[:,col] -= mu[col]
    x[:,col] /= sigma[col]
  end
  return x, mu, sigma
end

function apply_featnorm(x,mu,sigma)

  for col in 1:size(x,2)
    x[:,col] -= mu[col]
    x[:,col] /= sigma[col]
  end
  return x
end

end
