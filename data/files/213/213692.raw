using DataFrames, RDatasets
using Gadfly

dat = dataset("datasets", "iris")
## 1.
plot(dat, x="SepalLength", y="SepalWidth",
     xintercept=[5.0, 7.0], Geom.point, Geom.vline)

## 2.
plot(dat, x="SepalLength", y="SepalWidth",
     xintercept=[5.0, 7.0], Geom.point, Geom.vline(color="orange", size=2mm))
