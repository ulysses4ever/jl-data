type Data
    i::Int
    v::ASCIIString
    f::Float64

    Data(i, v, f) = new(i, v, f)
    Data() = new(0, "", 0.0)
end

type Node
    data::Data
    next::Node

    Node(data::Data) = (n = new(); n.data = data; n.next = n)
end

islast(n::Node) = (n == n.next)

function append{Data}(n::Node, data::Data)
    tmp = Node(data)
    if !islast(n)
        tmp.next = n.next
    end
    n.next = tmp
end

