import PDMats
import Distributions

function solak_grammian{T1<:Real, T2<:Real}(x::Array{T1,2}, gamma::Array{T2,1}, alpha::Float64, nu::Float64)
    size(x,1)==size(gamma,1) || error("x and gamma must have the same number of rows.")
    n = size(x,2)
    temp = zeros(Float64,(n,n))
    for i in 1:n
        temp[i,i]=nu
        for j in (i+1):n
            temp[i,j]=temp[j,i]=alpha*exp(-.5*sum((gamma.*(x[:,i]-x[:,j])).^2))
        end
    end
    return PDMats.PDMat(temp)
end
