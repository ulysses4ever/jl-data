# Epoch tester
@test !isweekend(Date(2014, 7, 11))
@test isweekend(Date(2014, 7, 12))
@test isweekend(Date(2014, 7, 13))
@test !isweekend(Date(2014, 7, 14))
@test easter(2002) == Date(2002, 3, 31)
@test easter(2014) == Date(2014, 4, 20)
@test easter(2014, Fri) == Date(2014, 4, 18)
@test easter(2014, Sat) == Date(2014, 4, 19)
@test easter(2014, Sun) == Date(2014, 4, 20)
@test easter(2014, Mon) == Date(2014, 4, 21)
@test easter(2014, Tue) == Date(2014, 4, 20)
@test easter(2014, Wed) == Date(2014, 4, 20)
@test easter(2014, Thu) == Date(2014, 4, 20)
@test easter(Date(2014, 3, 31)) == easter(2014)
@test seasonstart(1991, Mar) - DateTime(1991, 3, 21, 3, 2, 54) <= Millisecond(51 * 1000)
@test seasonstart(2000, Mar) - DateTime(2000, 3, 20, 7, 36, 19) <= Millisecond(51 * 1000)
@test seasonstart(1992, Jun) - DateTime(1992, 6, 21, 3, 15, 8) <= Millisecond(39 * 1000)
@test seasonstart(1995, Sep) - DateTime(1995, 9, 23, 12, 14, 1) <= Millisecond(44 * 1000)
@test seasonstart(1997, Dec) - DateTime(1997, 12, 21, 20, 8, 5) <= Millisecond(41 * 1000)
@test Date(seasonstart(1997, Dec)) == seasonstart(Date(1997, 1, 1), Dec)
@test_throws ErrorException seasonstart(999, Dec)
@test_throws ErrorException seasonstart(3001, Dec)
@test_throws ErrorException seasonstart(1999, Feb)
@test isnewyearsday(Date(2013, 1, 1))
@test !isnewyearsday(Date(2014, 1, 2))
@test !isnewyearsday(Date(2014, 2, 1))
@test isaustraliaday(Date(2014, 1, 26))
@test !isaustraliaday(Date(2014, 1, 27))
@test !isaustraliaday(Date(2014, 2, 26))
@test isanzacday(Date(2014, 4, 25))
@test !isanzacday(Date(2014, 4, 26))
@test !isanzacday(Date(2014, 5, 25))
@test iseaster(Date(2014, 4, 20))
@test !iseaster(Date(2014, 4, 21))
@test !iseaster(Date(2014, 5, 20))
@test isseasonstart(DateTime(1997, 12, 21, 20, 8, 20, 69), Dec)
@test isseasonstart(Date(1997, 12, 21), Dec)
@test ischristmasday(Date(2014, 12, 25))
@test !ischristmasday(Date(2014, 12, 26))
@test !ischristmasday(Date(2014, 11, 25))
@test isboxingday(Date(2014, 12, 26))
@test !isboxingday(Date(2014, 12, 27))
@test !isboxingday(Date(2014, 11, 26))

