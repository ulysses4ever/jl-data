# Epoch tester
@test !isweekend(Date(2014, 7, 11))
@test isweekend(Date(2014, 7, 12))
@test isweekend(Date(2014, 7, 13))
@test !isweekend(Date(2014, 7, 14))
@test easter(2002) == Date(2002, 3, 31)
@test easter(2014) == Date(2014, 4, 20)
@test easter(2014, Fri) == Date(2014, 4, 18)
@test easter(2014, Sat) == Date(2014, 4, 19)
@test easter(2014, Sun) == Date(2014, 4, 20)
@test easter(2014, Mon) == Date(2014, 4, 21)
@test easter(2014, Tue) == Date(2014, 4, 20)
@test easter(2014, Wed) == Date(2014, 4, 20)
@test easter(2014, Thu) == Date(2014, 4, 20)
@test easter(Date(2014, 3, 31)) == easter(2014)
