	close (ofs)
end

## extract any file
function extractZip (filename::String)
	zipData = ZipFile.Reader("$(filename)");
	for f in zipData.files
		ofs = open("/tmp/$(f.name)","w+")
		write (ofs,readall(f))
		close (ofs)
	end
	close(zipData)
end
