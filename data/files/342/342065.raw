using Spike

# create window instance: "title", [width 400, height 400], [xpos 0, ypos 0], [bgcolorR, G, B, A]
window = WindowInstance("Making a window with Spike", [400, 400], [0, 0], [1.0,0.0,0.0,1.0])

# bool of whether or not window is open, requires type WindowInstance
while open(window)
	
	# requires type WindowInstance, clears window
	clear(window)

	# requires type WindowInstance, swaps buffer and polls events
	update(window)

	# requires type WindowInstace, closes window
	# close(window)
end

# end OpenGL
terminate()