#  this function takes in a string and a char
#  or sub_string and removes all instances
#  of char from the passed_string

function remove_char(passed_string, search_character_string)

aaa=split(passed_string, search_character_string)
temp="x"
  for i in 1:size(aaa, 1)
    if length(aaa[i])!=0
      temp=string(temp,aaa[i])
    end
  end

  return_string = temp[2:end]
  return return_string

end
