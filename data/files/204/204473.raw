using Plotly, Logging

# plot x->y points
function plot_data(X,Y, fname)
	data = [
	  [
	    "x" => X, 
	    "y" => Y, 
	    "type" => "scatter"
	  ]
	]

	response = Plotly.plot([data], ["filename" => fname, "fileopt" => "overwrite"])
	plot_url = response["url"]
end


# plot 2 histograms
function plot_histograms(hist1, hist2, fname, title)
	trace1 = [
	  "x" => hist1,
	  "name" => "true distribution",
	  "opacity" => 0.75,
	  "histnorm" => "probability density",
	  "type" => "histogram"
	]
	trace2 = [
	  "x" => hist2,
	  "name" => "random walk",
	  "opacity" => 0.75,
	  "histnorm" => "probability density",
	  "type" => "histogram"
	]

	data = [trace1, trace2]
	layout = ["title" => title,
	  "xaxis" => ["title" => "Degree"],
	  "yaxis" => ["title" => "Frequency"],
	  "barmode" => "overlay"]

	response = Plotly.plot([data], ["layout" => layout, "filename" => fname, "fileopt" => "overwrite"])
	plot_url = response["url"]
end
