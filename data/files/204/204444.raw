using Graphs

# Random Walk
# @return the list of visited nodes
function RW{T<:Unsigned}(g::GenericAdjacencyList{T,Array{T,1},Array{Array{T,1},1}}, n_steps::T, starting_v=1)
	visited_nodes =  T[]
	v = convert(T,starting_v)
	for i in 1:n_steps
		nei = out_neighbors(v,g)
		nv = nei[rand(1:length(nei))]
		push!(visited_nodes,v)
		v = nv
	end
	return visited_nodes
end
