# total variation distance between 2 distributions
function TV(p,q)
	s = 0.
	for i in 1:length(p)
		s += abs(p[i]-q[i])	
	end
	return s/2
end

# Pearson correlation between two vectors
function pearson(X,Y)
	mx = mean(X)
	my = mean(Y)
	n = 0.
	dx = 0.
	dy = 0.
	for i in 1:length(X)
		n += (X[i]-mx)*(Y[i]-my)
		dx += (X[i]-mx)^2
		dy += (Y[i]-my)^2
	end
	return n/sqrt(dx*dy)
end

# normalize vector
function normalize(d)
	return d/norm(d)
end

# make vector stochastic
function stochastic(d)
	return d/sum(d)
end
