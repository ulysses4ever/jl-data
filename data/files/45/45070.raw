using   Base.Test
include("../pt2seg.jl")
exports = isdefined(:exports)?
    exports : Dict{ASCIIString,Function}()

exports["test_distance_2_segment"] = function test_pt2seg()
  
  a = [-0.8, -2.6]
  b = [-1, 1] # [6, 2]; [5, 2]
  c = [-2, 3]
  d = [7, -3]

  expects= (
    2.23606797749979, 7.810249675906654, 
    3.99384141282165, 1.1094003924504583
    ) 

  @test isequal(pt2seg(a, b, c), expects[1])
  @test isequal(pt2seg(a, b, d), expects[2])
  @test isequal(pt2seg(c, d, a), expects[3])
  @test isequal(pt2seg(c, d, b), expects[4])
  @test isequal(pt2seg((0,0), (0,0), (1,1) ), sqrt(2))
end


