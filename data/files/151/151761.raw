immutable MPIState
  comm
  nprocs
  procid
  rootproc

  function MPIState(MPI, rootproc)
    comm = MPI.COMM_WORLD
    nprocs = MPI.size(comm)
    procid = MPI.rank(comm)
    new(comm, nprocs, procid, rootproc)
  end
end

function show(io::IO, s::MPIState)
  println(io, "Process $(s.procid) of $(s.nprocs), with root process $(s.rootproc).")
end
