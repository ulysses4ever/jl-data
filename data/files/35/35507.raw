using Debug
@debug function bin2dec(n::AbstractArray{Bool,2})
# converts binary to decimal. first element of n is the MSB, last is the LSB
# eg: [false;true;true;true]' converts to 7 and [true;true;true;false]' 
# converts to 14.
    n = n[:];
    n = fliplr(n.')[:];
    nb = n;
    op = 0;
    for i = 1:length(n)
        if(n[i]==true)
            op = op + 1<<(i-1);
        end
    end
    return(op);
end
