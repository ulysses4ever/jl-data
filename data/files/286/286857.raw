using Distributions
using PyPlot
using DataFrames

# y_t = α + β_1y_t-1 + ... + β_py_t-p + ϵ_t
type VAR
  Y::Array
  X::Array
  β::Array
  ϵ::Array
  Σ::Array
  p::Int64
  VAR(Y,X,β,ϵ,Σ,p) = p <= 0 ? error("Lag-length error: 'p' must be strictly positive") : new(Y,X,β,ϵ,Σ,p)
end

function VAR(y::Array,p::Int64)
  (Y,X,β,ϵ,Σ,p) = estimate_var(y,p)
  return VAR(Y,X,β,ϵ,Σ,p)
end

function estimate_var(y::Array,p::Int64)
  (T,K) = size(y)
  Y = (y[p+1:T,:])'
  X = ones(1,T-p)
  for j=1:p
      X = [X; y[p+1-j:T-j,:]']
  end
  β = (Y*X')/(X*X')
  ϵ = Y - β*X
  Σ = ϵ*ϵ'
  return Y,X,β,ϵ,Σ,p
end

V = VAR(rand(100,4),4)
