module Mesos

using ProtoBuf

depsfile = Pkg.dir("Mesos","deps","deps.jl")
if isfile(depsfile)
    include(depsfile)
else
    error("Mesos not properly installed. Please run Pkg.build(\"Mesos\")")
end

include("Proto.jl")
include("utils.jl")
include("upid.jl")
include("executor_driver.jl")
include("executor.jl")
include("scheduler_driver.jl")
include("scheduler.jl")

export UPID, Proto,
       Executor, ExecutorDriver, Scheduler, SchedulerDriver,
       start, stop, run, abort,
       sendStatusUpdate, sendFrameworkMessage, acceptOffers, acknowledgeStatusUpdate,
       @proto

end # module
