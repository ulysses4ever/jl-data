type ReLU <: Functor
end

@compat (f::ReLU)(x) = forward(f, x)

function forward!(f::ReLU, x::Var)
  y = relu(x.val)
  backward! = gy -> hasgrad(x) && âˆ‡relu!(x.val, x.grad, gy)
  Var(y, f, [x], backward!)
end

