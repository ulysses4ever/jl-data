end

function disconnected_schd(callbackPtr::Ptr{Void}, schedulerPtr::Ptr{Void}, driverPtr::Ptr{Void})
    callback = unsafe_pointer_to_objref(callbackPtr)::Function
    scheduler = unsafe_pointer_to_objref(schedulerPtr)::Scheduler
